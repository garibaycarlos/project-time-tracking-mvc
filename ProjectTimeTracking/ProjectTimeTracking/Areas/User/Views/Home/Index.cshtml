@model IEnumerable<ProjectTracker>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .truncateStandard
    {
        max-width: 50px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .truncateDescription
    {
        max-width: 50px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<br />
<div class="row p-0 m-0" style="left:50px; right:50px; z-index:1; position:absolute;">
    <div class="col-10">
        <h2 class="text-info">Project Listing</h2>
    </div>
    <div class="col-2">
        <partial name="_AddNewButtonPartial" />
    </div>
    <div class="col-12 border p-3  backgroundWhite table-responsive">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                    <th>@Html.DisplayNameFor(m => m.CustomerId)</th>
                    <th>@Html.DisplayNameFor(m => m.ResourceId)</th>
                    <th>@Html.DisplayNameFor(m => m.ProjectStatusId)</th>
                    <th>@Html.DisplayNameFor(m => m.Initiator)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>@Html.DisplayNameFor(m => m.Hours)</th>
                    <th>Created</th>
                    <th>Started</th>
                    <th>Completed</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/project-listing.js"></script>
    <script src="~/js/delete-catalog.js"></script>

    <script type="text/javascript">
        $(document).ready(function ()
        {
            switch ('@TempData["message"]')
            {
                case 'added':
                    toastr.success('Project has been added');
                    break;
                case 'edited':
                    toastr.success('Project has been updated');
                    break;
            }
        });
    </script>
}