@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Categories</h2>
    </div>
    <div class="col-3">
        <partial name="_AddNewButtonPartial" />
    </div>
    <div class="col-12 border p-3 backgroundWhite">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/category.js"></script>
    <script src="~/js/change-catalog-status.js"></script>
    <script src="~/js/delete-catalog.js"></script>

    <script type="text/javascript">
        $(document).ready(function ()
        {
            switch ('@TempData["message"]')
            {
                case 'added':
                    toastr.success('Category has been added');
                    break;
                case 'edited':
                    toastr.success('Category has been updated');
                    break;
            }
        });
    </script>
}